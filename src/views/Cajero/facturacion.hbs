<div class="container">

   <form action="/facturacion" method="post">

    <!-- Sección de Datos de Factura -->
    <div class="mb-3 p-3 border border-3 rounded">
        <a href="/facturacion/nueva" class="btn btn-primary btn-sm me-2"><i class="bi bi-plus"></i> Agregar Factura</a>
        <a href="/facturacion/cargar" class="btn btn-secondary btn-sm me-2"><i class="bi bi-upload"></i> Cargar Factura</a>
        <div class="d-flex flex-wrap">
            <label class="me-2">Número Factura</label>
            <input type="text" class="form-control form-control-sm" name="numeroFactura" value="{{numeroFactura}}" disabled>
            <label class="me-2">Fecha</label>
            <input type="text" class="form-control form-control-sm" name="fecha" value="{{fecha}}" disabled>
            <label class="me-2">Hora</label>
            <input type="text" class="form-control form-control-sm" name="hora" value="{{hora}}" disabled>
        </div>
    </div>

    <!-- Sección de Datos del Cliente -->
    <div class="mb-3 p-3 border border-3 rounded">
        <div class="d-flex flex-wrap">
            <h2>Datos del Cliente</h2>
            <br><br>
             <div class="input-act">
                    <label for="ID">Identificación o NIt:</label>
                    <input type="text" id="ID" name="ID" value="{{data.ID}}" >
                </div>

                <button type="submit" class="btn btn-info">buscar</button>
                <div class="input-act">
                    <label for="RAZON-SOCIAL">Razon Social:</label>
                    <input type="text" id="RAZON-SOCIAL" name="RAZON-SOCIAL" value="{{data.RAZON-SOCIAL}}" disabled>
                </div>
               
                <div class="input-act">
                    <label for="DIRECCION">Direccion:</label>
                    <input type="text" id="DIRECCION" name="DIRECCION" value="{{data.DIRECCION}}" disabled>
                </div>

                <div class="input-act">
                    <label for="TELEFONO">Telefono:</label>
                    <input type="text" id="TELEFONO" name="TELEFONO" value="{{data.TELEFONO}}" disabled>
                </div>
        </div>
        {{#if error}}
            <p class="text-center">{{error}} </p>
         {{/if}}
    </div>

    <!-- Sección de Datos del Producto -->
    <div class="mb-3 p-3 border border-3 rounded product-fields">
        <div class="d-flex flex-wrap align-items-center">
            <label class="me-2">Código</label>
            <input type="text" class="form-control form-control-sm" name="codigoProducto">
            <label class="me-2">Descripción</label>
            <input type="text" class="form-control form-control-sm" name="descripcionProducto" disabled>
            <label class="me-2">Precio Unitario</label>
            <input type="text" class="form-control form-control-sm" name="precioUnitarioProducto" disabled>
            <label class="me-2">Cantidad</label>
            <input type="text" class="form-control form-control-sm" name="cantidadProducto">
            <button class="btn btn-success btn-sm rounded-circle"><i class="bi bi-plus"></i></button>
        </div>
    </div>

    <!-- Tabla de Productos -->
    <table class="table mb-3">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripción</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
                <th>Precio Total</th>
            </tr>
        </thead>
        <tbody>
            <!-- Filas de productos aquí -->
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <!-- Sección de Totales y Botones -->
    <div class="totals-section p-3 border border-3 rounded">
        <div class="d-flex justify-content-between align-items-end mb-3">
            <!-- Botones -->
            <div>
                <button class="btn btn-primary btn-sm"><i class="bi bi-save"></i> Guardar</button>
                <button class="btn btn-info btn-sm"><i class="bi bi-printer"></i> Imprimir</button>
                <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Eliminar</button>
                <button class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Modificar</button>
            </div>
            <!-- Contenido de la sección de totales -->
            <div class="d-flex flex-column align-items-end">
                <div class="input-group">
                    <label>Subtotal</label>
                    <input type="text" class="form-control form-control-sm" name="subtotal" disabled>
                </div>
                <div class="input-group">
                    <label>IVA</label>
                    <input type="text" class="form-control form-control-sm" name="iva" disabled>
                </div>
                <div class="input-group">
                    <label>Descuento</label>
                    <input type="text" class="form-control form-control-sm" name="descuento" disabled>
                </div>
                <div class="input-group">
                    <label>Total</label>
                    <input type="text" class="form-control form-control-sm" name="total" disabled>
                </div>
            </div>
        </div>
        <!-- ... (resto del contenido de la sección de totales) ... -->
    </div>

</form>
 

</div>