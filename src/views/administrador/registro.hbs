<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="container-fluid contenedor-inicio">
                    <h2 class="text-center">Registrar Usuarios</h2>
                    <form action="/usuarios" method="post" class="formulario-inicio">
                        <div class="input-registro">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" id="ID" name="ID" class="form-control" placeholder="Identificación" required>
                            </div>
                        </div>
                        <div class="input-registro">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" id="NOMBRE" name="NOMBRE" class="form-control" placeholder="Nombre Completo" required>
                            </div>
                        </div>
                        <div class="input-registro">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-briefcase"></i></span>
                                <select id="CARGO" name="CARGO" class="form-select" required>
                                    <option value="" disabled selected>Seleccione un cargo</option>
                                    <option value="administrador">Administrador</option>
                                    <option value="vendedor">Vendedor</option>
                                    <option value="cajero">Cajero</option>
                                    <option value="inventarios">Inventarios</option>
                                </select>
                            </div>
                        </div>
                        <div class="input-registro">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" id="USUARIO" name="USUARIO" class="form-control" placeholder="Nombre de usuario" required>
                            </div>
                        </div>
                        <div class="input-registro">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Contraseña" required>
                            </div>
                        </div>

                        <div class="input-registro d-flex justify-content-center">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-save"></i> Guardar</button>
                        </div>

                        {{#if error}}
                        <p class="text-success text-lg">{{error}}</p>
                        {{/if}}

                        {{#if mensaje}}
                        <p class="red">{{mensaje}}</p>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


